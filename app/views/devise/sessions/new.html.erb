<div class="container mt-3 w-25">
  <h2 class='title'>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: 'front-input'}, label_html: { class: 'font-label' } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: 'front-input'}, label_html: { class: 'font-label' } %>
      <% if devise_mapping.rememberable? %>
        <%= f.input :remember_me, as: :boolean, label_html: { class: 'font-label' } %>
      <% end %>
    </div>

    <div class="form-actions">
      <%= button_tag(type: 'submit', class: 'btn btn-grey') do %>
        <i class="fa-solid fa-check"></i> Log in
      <% end %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
