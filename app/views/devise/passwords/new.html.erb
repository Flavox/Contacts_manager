<div class="container mt-3 mb-3 d-flex flex-column align-items-center">
  <h2>Forgot your password?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: 'front-input'}, label_html: { class: 'font-label' } %>
    </div>

    <div class="form-actions">
      <%= button_tag(type: 'submit', class: 'btn btn-grey') do %>
        <i class="fa-solid fa-check"></i> Send me reset password instructions
      <% end %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
