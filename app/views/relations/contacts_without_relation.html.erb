<div class="container mt-3 mb-3">
  <div class="position-relative">
    <h1 class="position-absolute top-0 start-50 translate-middle-x title w-100">Contacts without relationship defined (<%= @contacts.count %> contacts)</h1>
    <br>
    <div data-controller='auto-search'>
      <div class="d-flex justify-content-between mt-5 ">
        <%# Bouton mobile %>
          <%= link_to raw('<i class="fa-solid fa-chevron-left"></i>'), edit_user_registration_path,
          class:'d-md-none btn btn-grey-square', rel: 'prefetch' %>
        <%# Bouton desktop %>
          <%= link_to raw('<i class="fa-solid fa-chevron-left"></i> Back'), edit_user_registration_path,
          class:'d-none d-md-flex btn btn-grey align-items-baseline pt-2 gap-2', rel: 'prefetch' %>

        <%= form_tag contacts_path, method: :get, class: "d-flex gap-1" do %>
          <%= text_field_tag :query, params[:query], data: { action: 'keyup->auto-search#update', auto_search_target: 'input' }, class: "form-control front-input", placeholder: "Search by name, address..." %>
          <%= button_tag type: 'button', class: 'btn btn-grey-square' do %>
            <i class="fa-solid fa-magnifying-glass"></i>
          <% end %>
        <% end %>
      </div>
      <br>
      <%= render 'contacts/list', contacts: @contacts %>
    </div>
  </div>
</div>
