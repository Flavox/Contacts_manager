<div class="w-25 mt-3">
  <h1 class='title'>All your relationships (<%= relations.size %>)</h1>
  <%= link_to raw('<i class="fa-solid fa-bullseye""></i> Add new'), new_relation_path, class: 'mt-5 btn btn-grey' %>

  <ul class='mt-3 container'>
    <% relations.each do |relation| %>
      <li class='card-text row'>
      <%= link_to relation_path(relation), class:'col-8 nav-link' do %>
        <%= relation.relation_type %> <%= "(#{relation.contacts.count} contacts)"%>
      <% end %>
        <%= link_to 'ðŸŽ¨', edit_relation_path(relation), class:'link col-2' %>
